doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
    script(src="https://cdn.tiny.cloud/1/u8rpxyi4dkzvpiruvvtruwos9ntfi3u5605rbklug3t0m8ag/tinymce/5/tinymce.min.js", referrerpolicy="origin")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/reset.css')
  body

    div.container-fluid
      nav.navbar.navbar-expand-lg.position-sticky
        div.container-fluid
          button.navbar-toggler.px-1.py-1(type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div.collapse.navbar-collapse(id="navbarContent")
            ul.navbar-nav.justify-content-evenly.w-100
                li.nav-item.mt-lg-3.mt-1.link-hover
                  a.nav-link.link-light.fs-6(aria-current="page" href="/blog") Blog
                if (currentUser)
                  if (currentUser.isAdmin)
                    li.nav-item.mt-lg-3.mt-1.link-hover
                      a.nav-link.link-light(aria-current="page" href="/blog/post/new") + New Blog Post 
                    li.nav-item.mt-lg-3.mt-1.link-hover
                      a.nav-link.link-light(aria-current="page" href="/admin") Admin Page
                  else
                    li.nav-item.mt-lg-3.mt-1
                      div.nav-link.text-light.fw-bold Logged in as: #{currentUser.username}
                  li.nav-item.mt-lg-3.mt-1.link-hover
                    a.nav-link.link-light(aria-current="page" href="/logout") Logout
                else
                  li.nav-item.mt-lg-3.mt-1.link-hover
                    a.nav-link.link-light(aria-current="page" href="/login") Login
                  li.nav-item.mt-lg-3.mt-1.link-hover
                    a.nav-link.link-light(aria-current="page" href="/register") Register
      div.col-md-offset-3.col-md-9.col-sm-12.mx-lg-auto

          block content