extends layout

block content
    section#posts.row.d-flex.flex-column
        div.col-sm-1
        div.col-sm-11
            if (posts)
                each post in posts
                    if (post.isPublic)
                        div.card.bg-dark.mt-lg-5.mt-2.pb-1.outline-offset-4
                            a(href="/blog/post/"+post._id)
                                div.card-body.px-lg-4.px-3.pt-4
                                    span.d-flex.lh-lg.py-2.post-header
                                        h3.card-title.text-light #{post.title} 
                                        h5.card-subtitle.text-light.lh-lg &nbsp;&nbsp;#{post.user.firstName} #{post.user.lastName}
                                    article.text-light.my-3 #{post.text}
                            div.card-footer.d-flex.justify-content-between.border-top.border-black.text-light
                                p Posted on: #{post.date}
                                span.d-flex.pointer
                                    svg.bi.bi-chat(xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#cccccc" viewBox="0 0 20 20")
                                        path(d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z")
                                    if (post.comments)
                                        p.text-light #{post.comments.length}
                                    else
                                        p.text-light 0